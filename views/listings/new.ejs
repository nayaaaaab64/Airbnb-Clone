<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <h2>Create a new listing!!</h2>
    <br> 
    <form action="/listing" method ="post">
        <div class="mb-1">
            <label for="title" class="form-label">Title</label>
            <input type="text" name ="listing[title]" placeholder="Enter the title" class="form-control">
        </div>
        <br>
        <div class="mb-1">
             <label for="description" class="form-label">Description</label>
             <textarea name="listing[description]"  class="form-control"></textarea>
        </div>
        <br>
        <div class="mb-1">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image]" placeholder="Enter the image url" class="form-control">
        </div>
         <br>
         <div class="row">
             <div class="mb-1 col-md-4" >
              <label for="price" class="form-label">price</label>
             <input type="number" name ="listing[price]" placeholder="Enter the price" class="form-control">
            </div>
            <div class="mb-1 col-md-8">
             <label for="country" class="form-label">Country</label>
             <input type="text" name="listing[country]" placeholder="Enter the country" class="form-control">
             </div>
             </div>
      
       <br>
       <div class="mb-1">
         <label for="location" class="form-label">Location</label>
         <input type="text" name="listing[location]" placeholder="Enter the location" class="form-control">
       </div>
        
        <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
        <br>
    </form>
</body>
</div>
</div>