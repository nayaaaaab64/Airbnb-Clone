<% layout("/layouts/boilerplate") %> 
<div class="row">
    <div class="col-8 offset-2 mt-3">
<body>
    <!-- Your listing id is <%= listing._id %> -->
<h2>Edit your listing</h2>
    <form action="/listing/<%= listing._id %>?_method=PUT" method="POST">
        <div class="mb-1"> 
             <label for="title" class="form-label">Title</label>
              <input type="text" name ="listing[title]" value="<%=listing.title%>" class="form-control">
        </div>
        <br>
        <div class="mb-1">
             <label for="decription" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"><%=listing.description%></textarea>
        </div>
        <br>
        <div class="mb-1">
            <label for="image" class="form-label">Image</label>
              <input name="listing[image]" value="<%=listing.image%>" class="form-control">
        </div>
       <br>
       <div class="row">

        <div class="mb-1 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name ="listing[price]"value="<%=listing.price%>" class="form-control">
        </div>
        <div class="mb-1 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control">
        </div>



       </div>
       
        <br>
         <div class="mb-1">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control">

         </div>
        
        <button type="submit" class="btn btn-dark edit-btn mt-3">Edit</button> <br>
    </form>
</body>
</div>
</div>

