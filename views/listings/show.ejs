<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
<body>
    <h3>You are viewing the <%= listing.title %></h3>
</div>
    <div class="card col-6 offset-3 show-card">
         <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing image">
  <div class="card-body">
    <p class="card-text">
       <b> <%= listing.title %> </b> <br>
            <%= listing.description %>  <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
    </p>

  </div>
    </div>
  

</div>
<div class="btns d-flex justify-content-center gap-3">
    <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark px-4 edit-btn">Edit</a>
    <form action="/listing/<%= listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark px-4">Delete</button>
    </form>
</div>


</body>